IF(NOT VTK_WRAP_DOTNET_KITDEPENDENCIES)
  MESSAGE(SEND_ERROR "VTK_WRAP_DOTNET_KITDEPENDENCIES not specified when calling KitCommonDotNetWrapBlock")
ENDIF(NOT VTK_WRAP_DOTNET_KITDEPENDENCIES)

FILE(APPEND "${VTK_WRAP_DOTNET_KITDEPENDENCIES}" "vtk${KIT}")
FOREACH (LIBTOFILE ${KIT_LIBS})
  FILE(APPEND "${VTK_WRAP_DOTNET_KITDEPENDENCIES}" " ${LIBTOFILE}")
ENDFOREACH (LIBTOFILE ${KIT_LIBS})
FILE(APPEND "${VTK_WRAP_DOTNET_KITDEPENDENCIES}" "\n")
  
# Create custom commands to generate the DotNet wrappers for this kit.
VTK_WRAP_DOTNET(vtk${KIT}DotNet KitDotNet_SRCS "${Kit_SRCS}")

# Create a shared library containing the DotNet wrappers.
ADD_LIBRARY(vtk${KIT}DotNet ${KitDotNet_SRCS} ${Kit_DOTNET_EXTRA_SRCS})
TARGET_LINK_LIBRARIES(vtk${KIT}DotNet vtk${KIT} ${KIT_DOTNET_LIBS})
IF(NOT VTK_INSTALL_NO_LIBRARIES)
  INSTALL_TARGETS(${VTK_INSTALL_LIB_DIR} RUNTIME_DIRECTORY ${VTK_INSTALL_BIN_DIR} vtk${KIT}DotNet)
ENDIF(NOT VTK_INSTALL_NO_LIBRARIES)
SET(KIT_LIBRARY_TARGETS ${KIT_LIBRARY_TARGETS} vtk${KIT}DotNet)

# Add dependencies that may have been generated by VTK_WRAP_DOTNET to
# the DotNet wrapper library.  This is needed for the
# pre-custom-command hack in Visual Studio 6.
IF(KIT_DOTNET_DEPS)
  ADD_DEPENDENCIES(vtk${KIT}DotNet ${KIT_DOTNET_DEPS})
ENDIF(KIT_DOTNET_DEPS)

